<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true" scan="true" scanPeriod="30 seconds">
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %level %logger - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="ch.pschatzmann.jflightcontroller4pi.integration" level="info" additivity="false">
		<appender-ref ref="CONSOLE" />
	</logger>

	<logger name="ch.pschatzmann.jflightcontroller4pi" level="info" additivity="false">
		<appender-ref ref="CONSOLE" />
	</logger>

	<root level="info">
		<appender-ref ref="CONSOLE" />
	</root>


</configuration>
